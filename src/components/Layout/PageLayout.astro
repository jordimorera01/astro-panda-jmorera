---
import '@fontsource-variable/inter'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Test Astro</title>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --primary: #51c9e1;
    --dark: #1a1a1a;
    --light: #f5f5f5;
  }
  html {
    font-family: system-ui, sans-serif;
  }
  body {
    font-family: 'Inter Variable', sans-serif;
    background: var(--dark);
  }
  .container {
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  h1 {
    font-size: 4rem;
    font-weight: 900;
    color: var(--light);
  }

  h2 {
    font-size: 1rem;
    font-weight: 300;
    color: var(--primary);
  }
</style>
